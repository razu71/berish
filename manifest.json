{
  "manifest_version": 3,
  "name": "Random Page Reloader",
  "version": "1.0",
  "description": "Reloads the current page at random intervals",
  "permissions": ["tabs", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/synchhronize.png",
      "48": "icons/synchhronize.png",
      "128": "icons/synchhronize.png"
    }
  },
  "icons": {
    "16": "icons/synchhronize.png",
    "48": "icons/synchhronize.png",
    "128": "icons/synchhronize.png"
  }
}